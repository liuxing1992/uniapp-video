
.listLeft{
	height: 150px;
	margin-left: 10px;
	color: #FFFFFF;
	width: 50%;
}
.author{
	height: 35px;
	line-height: 35px;
	font-size: 15px;
}
.title{
	line-height: 20px;
	font-size: 12px;
	color: #FFFFFF;
	width: 100%;
}
.box{
	width: 100px;
	overflow: hidden;
}
.music{
	width: 150px;
	height: 35px;
	line-height: 35px;
	font-size: 12px;
	-webkit-animation: music 4s linear 0.2s infinite;
	        animation: music 4s linear 0.2s infinite;
}
@-webkit-keyframes music{
0%{
		-webkit-transform: translateX(80%);
		        transform: translateX(80%);
}
100%{
			-webkit-transform: translateX(-80%);
			        transform: translateX(-80%);
}
}
@keyframes music{
0%{
		-webkit-transform: translateX(80%);
		        transform: translateX(80%);
}
100%{
			-webkit-transform: translateX(-80%);
			        transform: translateX(-80%);
}
}

