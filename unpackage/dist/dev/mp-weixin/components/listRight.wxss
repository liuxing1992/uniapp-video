
.listRight {

	width: 50px;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	right: 20px;
	margin: 0 auto;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.author-img {
	width: 50px;
	height: 50px;
	border-radius: 50px;
	border: 2px solid #FFFFFF;
	position: relative;
}
.img {
	width: 50px;
	height: 50px;
	border-radius: 50%;
}
.right-box {
	width: 40px;
	height: 30px;
	line-height: 30px;
	margin-top: 10px;
	color: #FFFFFF;
	font-size: 24px;
	text-align: center;
}
.number {
	font-size: 12px;
	color: #999999;
	margin-top: 5px;
}
.around{
	width: 50px;
	height: 50px;
	margin-top: 12px;
	-webkit-animation: rotate 1.5s linear 0.2s infinite ;
	        animation: rotate 1.5s linear 0.2s infinite ;
}
.add{
	width: 18px;
	height: 18px;
	border-radius: 50px;
	background-color: red;
	position: absolute;
	bottom: -9px;
	left: 16px;
	text-align: center;
	line-height: 18px;
	color: white;
	font-size: 12px;
}
@-webkit-keyframes rotate{
0%{
		-webkit-transform: rotate(0deg);
		        transform: rotate(0deg);
}
100%{
		-webkit-transform: rotate(360deg);
		        transform: rotate(360deg);
}
}
@keyframes rotate{
0%{
		-webkit-transform: rotate(0deg);
		        transform: rotate(0deg);
}
100%{
		-webkit-transform: rotate(360deg);
		        transform: rotate(360deg);
}
}

